<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blogspot.ramannada.quizapp.user.ResultActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_result_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hasil_akhir"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ahmad Muhammad"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@id/tv_result_header"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="90"
        android:textSize="80sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn_try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/coba_lagi"
        android:layout_above="@+id/btn_save"
        android:onClick="tryAgain"/>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simpan_hasil"
        android:layout_alignParentBottom="true"
        android:onClick="saveResult"/>

</RelativeLayout>
